<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_acceptation_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TaskAcceptation">

    <include
        android:id="@+id/top_nav"
        layout="@layout/top_nav"
        android:layout_width="413dp"
        android:layout_height="49dp" />

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/task_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_task_icon" />

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="108dp"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_task_n"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:text="Nutritionist consultation"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/price_owner_acceptation"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ic_price"
                    android:text="1000Kc"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/status_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I need nutritionist consultation every month."
                android:textColor="#434242"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/owner_task_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="owner"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/owner"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="-133dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="32dp"
                    android:layout_weight="1"
                    android:text="Bob Black"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/activity_task_description"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailed_description"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="Detailed description"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam elementum scelerisque sagittis. Aliquam aliquet urna id lectus varius bibendum. Sed sed elementum risus. Interdum et malesuada fames ac ante ipsum primis in faucibus. Mauris ac eros risus. Ut vel turpis mi. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam at elementum sapien. Etiam a tortor venenatis, suscipit felis at, porta libero. "
            android:textColor="#3C3B3B" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <EditText
            android:id="@+id/your_price"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Your price(optional)"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/task_acceptation_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Write here"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/accept"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ic_accept"
            android:fontFamily="sans-serif-medium"
            android:paddingRight="11dp"
            android:text="Accept"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/price_task_acceptation"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@drawable/ic_border_blue"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="1000 Kč"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>


</LinearLayout>